<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/b1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b1"
       android:backgroundTint="@color/purple_500"
       android:text="B1"/>

   <Button
       android:id="@+id/b2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:layout_marginTop="0dp"
       android:layout_marginBottom="0dp"
       android:backgroundTint="@color/purple_500"
       android:text="B3" />

   <Button
       android:id="@+id/b3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/purple_500"
       android:layout_alignParentRight="true"
       android:text="B2"/>

   <Button
       android:id="@+id/b4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
       android:backgroundTint="@color/purple_500"
       android:text="B4"/>

   <Button
       android:id="@+id/b5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b1"
       android:layout_toRightOf="@id/b1"
       android:backgroundTint="@color/purple_500"
       android:text="B5"/>

   <Button
       android:id="@+id/b6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b5"
       android:layout_toRightOf="@id/b5"
       android:backgroundTint="@color/purple_500"
       android:text="B6"/>

   <Button
       android:id="@+id/b7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b6"
       android:layout_toRightOf="@id/b1"
       android:backgroundTint="@color/purple_500"
       android:text="B7"/>

   <Button
       android:id="@+id/b8"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b7"
       android:backgroundTint="@color/purple_500"
       android:text="B8"/>

   <Button
       android:id="@+id/b9"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b7"
       android:layout_toRightOf="@id/b7"
       android:backgroundTint="@color/purple_500"
       android:text="B9"/>

   <Button
       android:id="@+id/b10"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b9"
       android:layout_toRightOf="@id/b9"
       android:backgroundTint="@color/purple_500"
       android:text="B10"/>

   <Button
       android:id="@+id/b11"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b10"
       android:layout_toRightOf="@id/b7"
       android:backgroundTint="@color/purple_500"
       android:text="B11"/>

   <Button
       android:id="@+id/b12"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b11"
       android:layout_toRightOf="@id/b1"
       android:backgroundTint="@color/purple_500"
       android:text="B12"/>

   <Button
       android:id="@+id/b13"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/b12"
       android:backgroundTint="@color/purple_500"
       android:text="B13"/>






</RelativeLayout>